@using EventPlus.Models
@model UserViewModel

@{
    ViewBag.Title = "Sign Up";
}


<section class="signup-section" id="signup">
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-lg-8 mx-auto text-center">
                <i class="far fa-paper-plane fa-2x mb-2 text-white"></i>
                <h2 class="text-white mb-5"> Register </h2>

                @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
                {
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-group email-input", @placeholder = "Email", @type = "email" });
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control form-group password-input", @placeholder = "Password", @type = "password" });
                    @Html.TextBoxFor(model => model.First_Name, new { @class = "form-control form-group name-input", @placeholder = "First Name" });
                    @Html.TextBoxFor(model => model.Last_Name, new { @class = "form-control form-group name-input", @placeholder = "Last Name" });
                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control form-group name-input", @placeholder = "Address" });
                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control form-group name-input", @placeholder = "Phone", @type = "tel" })
                    @Html.DropDownListFor(model => model.Gender, new SelectList(Enum.GetValues(typeof(Gender))), "--Select Gender--", new { @class = "form-control form-group name-input" });

                    @*@Html.TextBoxFor(model => model.Gender, new { @class = "form-control form-group name-input", @placeholder = "Gender" })*@
                    @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "form-control form-group name-input", @placeholder = "Date of Birth", @type = "date" })
                    @Html.TextBoxFor(model => model.OrganizationName, new { @class = "form-control form-group name-input", @placeholder = "Organization Name (Optional)" })


                    <br>

                    <button class="btn btn-primary form-group login-button">Sign Up</button>
                    <p class="text-white">Already a member? <a href="SignIn" class="">Login.</a></p>
                }
            </div>
        </div>
    </div>
</section>